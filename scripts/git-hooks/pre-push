#!/bin/bash

# Check Node.js version
required_version="23.1.0"
current_version=$(node -v | cut -d 'v' -f 2)
if [ "$(printf '%s\n' "$required_version" "$current_version" | sort -V | head -n1)" != "$required_version" ]; then
    echo "âŒ Node.js version $required_version or higher is required (current: $current_version)"
    exit 1
fi

echo "ğŸ” Running lint..."
bun run lint || {
    echo "âŒ Lint check failed"
    exit 1
}

echo "ğŸ” Running production build before push..."
bun run build || {
    echo "âŒ Production build failed. Push aborted."
    exit 1
}

echo "âœ… Production build successful"
exit 0
