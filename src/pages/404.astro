---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
    <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">The page you're looking for doesn't exist.</p>
    <div class="flex gap-4">
      <a href="/" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
        Go Home
      </a>
      <button onclick="window.history.back()" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-100 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
        Go Back
      </button>
    </div>
  </div>
</Layout>