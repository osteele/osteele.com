        { name: "Affinity Photo", url: "https://affinity.serif.com/photo/", desc: "Professional photo editing" },
        { name: "Lightroom", url: "https://www.adobe.com/products/photoshop-lightroom.html", desc: "Photo management and processing" },
    ],
    "Vector & Graphics": [
        { name: "Affinity Designer", url: "https://affinity.serif.com/designer/", desc: "Vector graphics and illustration" },
