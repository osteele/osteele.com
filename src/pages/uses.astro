const macosWorkflow = {
    "Quick Access": [
        { name: "Raycast", url: "https://www.raycast.com/", desc: "Extensible launcher and productivity tool" },
        { name: "rcmd", url: "https://lowtechguys.com/rcmd", desc: "Quick app switching with right command key" },
        { name: "Bartender", url: "https://www.macbartender.com/", desc: "Menu bar management" },
    ],
    "Screen Capture & Text": [
        { name: "CleanShot X", url: "https://cleanshot.com/", desc: "Screenshot, screen recording, and annotation" },
        { name: "ScreenFloat", url: "https://www.screenfloat.app/", desc: "Floating screenshot reference" },
        { name: "TextSniper", url: "https://textsniper.app/", desc: "OCR text extraction from screen" },
    ],
    "Automation & Utilities": [
        { name: "Keyboard Maestro", url: "https://www.keyboardmaestro.com/", desc: "Powerful macOS automation" },
        { name: "Yoink", url: "https://yoink.app/", desc: "Drag and drop shelf" },
        { name: "Paste", url: "https://pasteapp.io/", desc: "Clipboard history manager" },
    ],
    "Subscription Platform": [
        { name: "SetApp", url: "https://setapp.com/", desc: "Access to 240+ macOS and iOS apps" },
    ]
