    "Video Production": [
        { name: "Final Cut Pro", url: "https://www.apple.com/final-cut-pro/", desc: "Professional video editing" },
        { name: "DaVinci Resolve", url: "https://www.blackmagicdesign.com/products/davinciresolve", desc: "Color grading and video editing" },
