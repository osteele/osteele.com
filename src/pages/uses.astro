---
import Layout from "../layouts/Layout.astro";

// Define tools data structure
const softwareEngineering = {
    "Development Tools": [
        { name: "Jujutsu (jj)", url: "https://jj-vcs.github.io/jj/", desc: "and", link2: { name: "Git", url: "https://git-scm.com/" }, desc2: "for version control" },
        { name: "Visual Studio Code", url: "https://code.visualstudio.com/", desc: "for general development" },
        { name: "Claude Code", url: "https://claude.ai/code", desc: "for AI-assisted coding" },
        { name: "Zed", url: "https://zed.dev/", desc: "as a fast text editor" },
        { name: "Warp", url: "https://www.warp.dev/", desc: "terminal with AI-powered admin/ops features" },
