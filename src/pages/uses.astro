    <div class="max-w-4xl mx-auto px-6 py-12">
        <h1 class="text-4xl font-bold mb-8">I Use</h1>

        <div class="prose prose-lg dark:prose-invert max-w-none">
            <section class="mb-8">
                <p class="text-xl leading-relaxed mb-6">
                    A collection of tools, apps, and services that power my
                    daily workflow. From development environments to
                    productivity boosters, these are the tools I rely on.
                </p>
            </section>

            <!-- Software Engineering -->
            <section class="mb-8">
                <h2 class="text-2xl font-semibold mb-4">
                    Software Engineering
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        Object.entries(softwareEngineering).map(
                            ([category, items]) => (
                                <div>
                                    <h3 class="text-lg font-semibold mb-2">
                                        {category}
                                    </h3>
                                    {items.type === "text" ? (
                                        <p class="text-gray-600 dark:text-gray-400">
                                            {items.content}{" "}
                                            <a
                                                href={items.link.url}
                                                class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 underline"
                                            >
                                                {items.link.text}
                                            </a>
                                            .
                                        </p>
                                    ) : (
                                        <ul class="list-disc list-inside space-y-1">
                                            {items.map((group) => {
                                                const currentTools =
                                                    group.tools.filter(
                                                        (t) => !t.previously,
                                                    );
                                                const previousTools =
                                                    group.tools.filter(
                                                        (t) => t.previously,
                                                    );
                                                return (
                                                    <li>
                                                        {currentTools.length >
                                                            0 && (
                                                            <span>
                                                                {currentTools.map(
                                                                    (
                                                                        tool,
                                                                        i,
                                                                    ) => (
                                                                        <span>
                                                                            {i >
                                                                                0 &&
                                                                                ", "}
                                                                            {tool.url ? (
                                                                                <a
                                                                                    href={
                                                                                        tool.url
                                                                                    }
                                                                                    target="_blank"
                                                                                    rel="noopener noreferrer"
                                                                                    class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 underline"
                                                                                >
                                                                                    {
                                                                                        tool.name
                                                                                    }
                                                                                </a>
                                                                            ) : (
                                                                                <span class="font-medium">
                                                                                    {
                                                                                        tool.name
                                                                                    }
                                                                                </span>
                                                                            )}
                                                                        </span>
                                                                    ),
                                                                )}
                                                            </span>
                                                        )}
                                                        {group.desc && (
                                                            <span>
                                                                {" "}
                                                                - {group.desc}
                                                            </span>
                                                        )}
